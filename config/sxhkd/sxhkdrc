#
# bspwm hotkeys
#

super + alt + Escape
	pkill Xorg

super + w
	bspc window -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {s,f}
	bspc window -t {floating,fullscreen}

super + {grave,Tab}
	bspc {window,desktop} -f last

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest

super + {h,j,k,l}
	$WM_SCRIPTS/focus.sh $($WM_SCRIPTS/closest.sh {left,down,up,right})

super + {_,shift + }c
	$WM_SCRIPTS/focus.sh {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}; /home/tyler/bin/redrawbar.sh

super + shift + bracket{left,right}
	bspc desktop -s {prev,next}; /home/tyler/bin/redrawbar.sh

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}; /home/tyler/bin/redrawbar.sh

~button1
	$WM_SCRIPTS/focus.sh $($WM_SCRIPTS/underneath.sh)

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1,3}
	{wmv, wrs} -a %i %i $(pfw)

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	gnome-terminal

super + space
	zsh -c "rofi -show run"

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
