#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + {_,shift + }w
	bspc node -{c,k}

super + m
	bspc desktop -l next

super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

super + {grave,Tab}
	bspc {node,desktop} -f last

super + apostrophe
	bspc node -s last

super + {o,i}
	bspc wm --record-history off; \
	bspc node {older,newer} -f; \
	bspc wm --record-history on

super + m
	bspc node -s biggest

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

super + {_,shift + }c
	bspc node -f {next,prev}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + shift + bracketleft
	bspc desktop -s prev; bspc desktop -f prev

super + shift + bracketright
	bspc desktop -s next; bspc desktop -f next

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {1-9}
	bspc node -o 0.{1-9}

super + ctrl + space
	bspc node -p cancel

super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

super + alt + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

super + alt + shift + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

super + {minus,equal}
	/home/tyler/bin/metadata.sh bspwm gap_width "$(($(/home/tyler/bin/metadata.sh bspwm gap_width) {-,+} 2))"; /home/tyler/bin/resize_desktops.sh

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	urxvt

super + shift + Return
	cool-retro-term

super + space
	zsh -c "rofi -show run"

#
# Sound controls
#
XF86Audio{Raise,Lower}Volume
	amixer -q set Master 5%{+,-} unmute

XF86AudioMute
	amixer -q set Master toggle

XF86AudioMicMute
	amixer set Capture toggle

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
